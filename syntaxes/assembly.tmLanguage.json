{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Sapi 8 bit Assembly Language",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#op-code"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#hex-number"
		},
		{
			"include": "#register"
		},
		{
			"include": "#label"
		}
	],
	"repository": {
		"op-code": {
			"patterns": [
				{
					"name": "keyword.control.assembly",
					"match": "/\b(?:AND|OR|ADD|SUB|LW|SW|MOV|INP|JEQ|JNE|JGT|JLT|LW|SW|LI|JMP)\b/"
				}
			]
		},
		"strings": {
			"patterns": [
				{
					"name": "string.assembly",
					"match": "(\"|').*?(\"|')"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "punctuation.definition.comment.assembly",
					"match": "/;.*|#.*/"
				}
			]
		},
		"hex-number": {
			"patterns": [
				{
					"name": "constant.character.hexadecimal.assembly",
					"match": "/0[xX][0-9a-fA-F]+/"
				}
			]
		},
		"register": {
			"patterns": [
				{
					"name": "variable.parameter.register.assembly",
					"match": "/\b(?:R0|R1|R2|R3|INP)\b/"
				}
			]
		},
		"label": {
			"patterns": [
				{
					"name": "entity.name.function.assembly",
					"match": "/.+?(?<=:)/"
				}
			]
		}
	},
	"scopeName": "source.asm"
}